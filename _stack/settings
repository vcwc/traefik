#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/traefik"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_traefik"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_traefik"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_STACKPREFIX}_traefik_config_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="${DOLLAR}{VCW_STACK_STACKPREFIX}_traefik_config_volume:/etc/traefik"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_TRAEFIK_ENVIRONMENT,\
$VCW_STACK_TRAEFIK_COMMAND,\
$VCW_STACK_TRAEFIK_PORTS,\
$VCW_STACK_TRAEFIK_VOLUMES,\
$VCW_STACK_TRAEFIK_NETWORKS,\
$VCW_STACK_TRAEFIK_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES'
export VCW_STACK_GLOBAL_SERVICE_NAME="traefik"
export VCW_STACK_GLOBAL_IMAGE_NAME="traefik"
export VCW_STACK_TRAEFIK_ENVIRONMENT=
export VCW_STACK_TRAEFIK_COMMAND=
export VCW_STACK_TRAEFIK_PORTS="${DOLLAR}{VCW_STACK_TRAEFIK_MODULE_TRAEFIK_GATEWAY_PORT}:80,${DOLLAR}{VCW_STACK_TRAEFIK_MODULE_TRAEFIK_DASHBOARD_PORT}:8080"
export VCW_STACK_TRAEFIK_VOLUMES="'/var/run/docker.sock:/var/run/docker.sock', '${DOLLAR}{VCW_STACK_STACKPREFIX}_traefik_config_volume:/etc/traefik'"
export VCW_STACK_TRAEFIK_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay, ${DOLLAR}{VCW_STACK_NETWORKGLOBAL}_overlay"
export VCW_STACK_TRAEFIK_DEPLOY_MODE="replicated"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay: { external: true },${DOLLAR}{VCW_STACK_NETWORKGLOBAL}_overlay: { external: true }"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_traefik_config_volume: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS traefik.base
export VCW_STACK_TRAEFIK_MODULE_TRAEFIK_GATEWAY_PORT="80"
export VCW_STACK_TRAEFIK_MODULE_TRAEFIK_DASHBOARD_PORT="8080"
export VCW_STACK_TRAEFIK_DEPLOY_RESOURCES_LIMITS_MEMORY="128m"
export VCW_STACK_TRAEFIK_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="32m"
# END SETTINGS traefik.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
